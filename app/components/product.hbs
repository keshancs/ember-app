<div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">
    <LinkTo data-test-product={{@product.id}} @route="item" @model={{@product.id}} class="card mt-3 text-decoration-none zoomable">
        <Product::Image @src={{this.productImage}} @alt={{@product.name}} />
        <Product::Details
            @id={{@product.id}}
            @name={{@product.name}}
            @price={{@product.price}}
            @color={{this.color}}
            @changeColor={{this.changeColor}} />
    </LinkTo>
</div>
